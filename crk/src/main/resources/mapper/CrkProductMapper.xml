  <select id="selectByItem" parameterType="string" resultMap="BaseResultMap">
  SELECT
	t1.*,IFNULL(t2.inputNum,0)-IFNULL(t3.outputNum,0) product_stock
FROM
	crk_product t1
LEFT JOIN (SELECT product_id,SUM(input_num) inputNum from crk_input GROUP BY product_id) t2 ON t1.id = t2.product_id
LEFT JOIN (SELECT product_id,SUM(output_num) outputNum from crk_output GROUP BY product_id) t3 ON t1.id = t3.product_id
